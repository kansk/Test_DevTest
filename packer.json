{
  "variables": {
  "builder_type": "",
  "identity_endpoint": "",
  "tenant_name": "",
  "domain_name": "",
  "username": "",
  "password": "",
  "region": "",
  "use_floating_ip": "",
  "floating_ip_pool": "",
  "ssh_username": "",
  "image_name": "",
  "networks": "",
  "source_image_name": "",
  "flavor": "",
  "insecure": "true"
},
  
"builders": [
  {
  "type": "openstack",
  "identity_endpoint": "{{user `identity_endpoint`}}",
  "tenant_name": "{{user `tenant_name`}}",
  "username": "{{user `username`}}",
  "password": "{{user `password`}}",
  "region": "{{user `region`}}",
  "use_floating_ip": "{{user `use_floating_ip`}}",
  "floating_ip_pool": "{{user `floating_ip_pool`}}",
  "ssh_username": "{{user `ssh_username`}}",
  "image_name": "{{user `image_name`}}",
  "networks": "{{user `networks`}}",
  "source_image_name": "{{user `source_image_name`}}",
  "flavor": "{{user `flavor`}}",
  "insecure": "{{user `insecure`}}"
  }
  ],
"provisioners": [
  {
      "destination": "/home/ubuntu/tomcat7",
      "source": "./tomcat7",
      "type": "file"
  },
  {
      "destination": "/home/ubuntu/tomcat-users.xml",
      "source": "./tomcat-users.xml",
      "type": "file"
  },
  {
    "type": "shell",
    "inline": [
    "export http_proxy=http://165.225.104.34:80",
    "export https_proxy=https://165.225.104.34:80",
    "apt-get update && apt-get upgrade",
     "apt-get install aptitude",
    "apt-get -f install",
    "apt-get -y install git",
    "git clone https://github.com/steinsag/gwt-maven-example",
    "cd gwt-maven-example",
    "sudo apt-get -y install maven",
    "sudo mvn clean install",
    "mvn tomcat7:run-war-only" 
  ]
  }]
}
